@model MultiTenant_Inventory_Management.Models.Inventory.Customer

@{
    ViewBag.Title = "Detail";
    ViewBag.pTitle = "Detail";
    ViewBag.pageTitle = "Customer";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="row mb-2">
                    <div class="col-sm-8">
                        <div class="text-sm-left">
                            <a asp-action="Index" class="btn btn-success btn-rounded waves-effect waves-light mb-2 mr-2"><i class="mdi mdi-keyboard-return mr-1"></i>Customers</a>
                        </div>
                    </div>
                </div>
                <div>
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.CustomerName)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.CustomerName)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Company)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Company)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Email)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Email)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.WorkPhone)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.WorkPhone)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Receivables)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Receivables)
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>

<div>
    <div class="col-sm-8">
        <div class="text-sm-left">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-info btn-rounded waves-effect waves-light mb-2 mr-2"><i class="mdi mdi-account-edit mr-1"></i> Edit Customer</a>
        </div>
    </div>


</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
