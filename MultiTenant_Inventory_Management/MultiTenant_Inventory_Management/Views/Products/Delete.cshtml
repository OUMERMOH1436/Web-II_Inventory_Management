@model MultiTenant_Inventory_Management.Models.Inventory.Product

@{
    ViewBag.Title = "Delete Product";
    ViewBag.pTitle = "Delete Product";
    ViewBag.pageTitle = "Inventory";
}
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="row mb-2">
                    <div class="col-sm-4">
                        <div class=" mr-2 mb-2 d-inline-block">
                            <div class="position-relative">
                                <h4 class="card-title">Are you sure you want to delete this?</h4>
                                <p class="card-title-desc">Click Delete Button if you want to procceed</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-8">
                        <div class="text-sm-right">
                            <a asp-action="Index" class="btn btn-success btn-rounded waves-effect waves-light mb-2 mr-2"><i class="mdi mdi-keyboard-return mr-1"></i> Products </a>
                        </div>
                    </div><!-- end col-->

                </div>
                <form asp-action="Delete">
                    <div class="row">
                                <h5 class="mb-3">Product Information :</h5>
                                <div class="table-responsive">
                                    <table class="table mb-0 table-bordered">
                                        <tbody>
                                            <tr>
                                                <th scope="row" style="width: 200px;">
                                                    @Html.DisplayNameFor(model => model.PartNumber)
                                                </th>
                                                <td style="width: 200px;">
                                                    @Html.DisplayFor(model => model.PartNumber)
                                                </td>
                                            </tr>
                                            <tr>
                                                <th scope="row">
                                                    @Html.DisplayNameFor(model => model.Name)
                                                </th>
                                                <td>@Html.DisplayFor(model => model.Name)</td>
                                            </tr>
                                            <tr>
                                                <th scope="row">
                                                    @Html.DisplayNameFor(model => model.Category)
                                                </th>
                                                <td>@Html.DisplayFor(model => model.Category.Name)</td>
                                            </tr>
                                            <tr>
                                                <th scope="row">
                                                    @Html.DisplayNameFor(model => model.Brand)
                                                </th>
                                                <td>@Html.DisplayFor(model => model.Brand.BrandName)</td>
                                            </tr>
                                            <tr>
                                                <th scope="row">
                                                    @Html.DisplayNameFor(model => model.Tax)
                                                </th>
                                                <td>
                                                    @Html.DisplayFor(model => model.ProductTax.TaxRate)%
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Delete" class="btn btn-danger mr-1 waves-effect waves-light" />
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>
<!-- end row -->
<!-- end row -->
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
