@model MultiTenant_Inventory_Management.Models.Inventory.Vendor

@{
    ViewBag.Title = "Delete";
    ViewBag.pTitle = "Delete";
    ViewBag.pageTitle = "Vendor";
}
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="row mb-2">
                    <h3>Are you sure you want to delete this?</h3>
                    <div class="col-sm-8">
                        <div class="text-sm-left">
                            <a asp-action="Index" class="btn btn-success btn-rounded waves-effect waves-light mb-2 mr-2"><i class="mdi mdi-keyboard-return mr-1"></i>Vendors</a>
                        </div>
                    </div>
                </div>
                <div>
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.VendorName)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.VendorName)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Company)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Company)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Email)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Email)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.WorkPhone)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.WorkPhone)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Payables)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Payables)
                        </dd>

                    </dl>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Delete" class="btn btn-danger" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
